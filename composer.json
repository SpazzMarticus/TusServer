{
    "name": "spazzmarticus/tus-server",
    "description": "Tus.io-protocol server implementation using PSR standards",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "SpazzMarticus",
            "email": "SpazzMarticus@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "psr/event-dispatcher": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/log": "^1.1|^2.0|^3.0",
        "psr/simple-cache": "^1.0|^2.0|^3.0",
        "ramsey/uuid": "^4.1"
    },
    "require-dev": {
        "cache/filesystem-adapter": "^1.0",
        "friendsofphp/php-cs-fixer": "^v3.51.0",
        "laminas/laminas-diactoros": "^2.2|^3.0",
        "laminas/laminas-httphandlerrunner": "^1.1|^2.0",
        "mikey179/vfsstream": "^1.6",
        "mockery/mockery": "^1.3",
        "monolog/monolog": "^2.0",
        "phpunit/phpunit": "^9.0",
        "psr/http-server-middleware": "^1.0",
        "symfony/event-dispatcher": "^6.4|^7.0"
    },
    "autoload": {
        "psr-4": {
            "SpazzMarticus\\Tus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SpazzMarticus\\Tus\\": "tests/phpunit/unit/"
        }
    },
    "scripts": {
        "ci:phpcs": "php-cs-fixer fix",
        "ci:test:phpunit": "phpunit -c build/phpunit.xml",
        "ci:test:newman": "node node_modules/newman/bin/newman.js run -e tests/postman/tus.postman_environment.json tests/postman/tus.postman_collection.json --bail",
        "ci:tests": [
            "@ci:test:phpunit",
            "@ci:test:newman"
        ],
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci:static": [
            "@ci:phpcs"
        ],
        "ci": [
            "@ci:static",
            "@ci:dynamic"
        ]
    }
}
